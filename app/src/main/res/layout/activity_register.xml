<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_memo"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/signUp"
        android:layout_width="199dp"
        android:layout_height="74dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/register_img"
        android:textColor="#9f9588"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        android:background="#88a6c6"
        android:layout_width="300dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/signUp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/etName"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:hint="   사용자 이름"
        android:textSize="15dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/etBirth"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:hint="   생년월일"
        android:textSize="15dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        app:layout_constraintTop_toBottomOf="@id/etName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:hint="   휴대폰 번호"
        android:textSize="15dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        app:layout_constraintTop_toBottomOf="@id/etBirth"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:hint="   이메일(아이디)"
        android:textSize="15dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        app:layout_constraintTop_toBottomOf="@id/etPhoneNumber"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/etPW"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:hint="   비밀번호"
        android:textSize="15dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/etCheckPW"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:hint="   비밀번호 확인"
        android:textSize="15dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        app:layout_constraintTop_toBottomOf="@id/etPW"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="가입"
        android:backgroundTint="#9f9588"
        app:layout_constraintTop_toBottomOf="@id/etCheckPW"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>