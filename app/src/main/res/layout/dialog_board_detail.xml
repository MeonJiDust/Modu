<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="50dp"
    android:background="@drawable/background_memo"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="제목"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_title"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        android:gravity="left"
        android:padding="10dp"
        android:text="제목"
        android:textSize="20dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/title_tv"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="작성일"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@+id/date_title"
        app:layout_constraintBottom_toBottomOf="@+id/date_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_title"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작성자 : "
        app:layout_constraintLeft_toLeftOf="@+id/tv"
        app:layout_constraintBottom_toTopOf="@+id/tv"/>

    <TextView
        android:id="@+id/date_title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        android:gravity="left"
        android:padding="10dp"
        android:text="작성일"
        android:textSize="20dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/title_tv"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        android:gravity="left"
        android:padding="15dp"
        android:textSize="20dp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_title"/>


    <Button
        android:id="@+id/dialog_ok"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="확인"
        android:backgroundTint="#9f9588"
        android:layout_marginTop="30dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>